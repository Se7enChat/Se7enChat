<!DOCTYPE html>
<html ng-app="Se7enChat">
    <head>
        <title>((pageTitle))</title>
        <link rel="stylesheet" type="text/css" href="((cssUrl))/index.css">
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.8/angular.min.js"></script>
        <script src="http://code.angularjs.org/1.2.8/angular-animate.min.js"></script>
        <script src="((javascriptUrl))/index.js"></script>
        <script type="text/javascript">
            var application = angular.module('Se7enChat', ['ngAnimate']);
            var userName = '((userName))';
        </script>
    </head>
    <body  ng-controller="PostsController">
        <div id="headerBar">
            ((# rooms ))
                <div class="room ((selected))">((name))</div>
            ((/ rooms ))
        </div>
        <div id="posts">
            <div class="post" ng-repeat="post in posts" data-ng-animate="'post-animate'">
                <div class="postHeader">
                    <div id="controlIcons">
                        <img id="delete" src="((imageUrl))/delete.png" />
                    </div>
                    <strong>{{post.userName}}</strong> | {{post.timestamp}}
                    <div class="controls"></div>
                </div>
                <div class="postBody">
                    {{post.body}}
                </div>
            </div>
        </div>
        <div id="sideSlider"></div>
        <div id="footerBar">
            <div id="userInformation">
                <img id="avatar" src="http://i.imgur.com/NKTRRtZ.png">
                ((userName))
            </div>
            <div id="inputContainer">
                <form ng-submit="addPost()">
                    <input type="submit" id="messageButton" value="Send">
                    <input
                        type="text"
                        id="messageBar"
                        placeholder="Type here, then press enter."
                        ng-model="postText"
                    >
                </form>
            </div>
        </div>
    </body>
</html>
